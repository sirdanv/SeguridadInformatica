@model SeguridadInformatica.Models.Dimensiones

@{
    ViewData["Title"] = "Create";
}

<h1>Crear dimesión y valorización de sus activos</h1>

<h4>Dimensiones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Disponibilidad" class="control-label"></label>
                <select asp-for="Disponibilidad" class="form-control">
                    <option value=" ">----- Seleccione el valor de la dimensión -----</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
                @*<input asp-for="TipoD" class="form-control" />*@
                <span asp-validation-for="Disponibilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Integridad" class="control-label"></label>
                <select asp-for="Integridad" class="form-control">
                    <option value=" ">----- Seleccione el valor de la dimensión -----</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
                @*<input asp-for="TipoD" class="form-control" />*@
                <span asp-validation-for="Integridad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Confidencialidad" class="control-label"></label>
                <select asp-for="Confidencialidad" class="form-control">
                    <option value=" ">----- Seleccione el valor de la dimensión -----</option>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
                @*<input asp-for="TipoD" class="form-control" />*@
                <span asp-validation-for="Confidencialidad" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Evaluacion" class="control-label"></label>
                <input asp-for="Evaluacion" class="form-control" />
                <span asp-validation-for="Evaluacion" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Usuarios" class="control-label"></label>
                @*<select asp-for="UsuariosId" class="form-control" asp-items="ViewBag.Usuario"></select>*@
                <select asp-for="UsuariosId" class="form-control">
                    <option value="">----- Seleccione el usuario -----</option>
                    @foreach (var item in ViewBag.Usuario)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Activos" class="control-label"></label>
                @*<select asp-for="ActivosId" class="form-control" asp-items="ViewBag.Tipo"></select>*@
                <select asp-for="ActivosId" class="form-control">
                    <option value="">----- Seleccione el tipo de activo -----</option> 
                    @foreach (var item in ViewBag.Tipo)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista de dimensiones</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
