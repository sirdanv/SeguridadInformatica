@model SeguridadInformatica.Models.Usuarios

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro de querer eliminar este usuario?</h3>
<div>
    <h4>Usuarios</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empresa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario)
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contraseña)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contraseña)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contraseña)
        </dt>
        <dd class="col-sm-10 hidden-password">
            @Html.DisplayFor(model => model.Contraseña)
        </dd>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var hiddenPassword = document.querySelector('.hidden-password');
                var password = hiddenPassword.innerHTML;
                var hiddenValue = '*'.repeat(password.length);
                hiddenPassword.innerHTML = hiddenValue;
            });
        </script>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UsuariosId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista de usuarios</a>
    </form>
</div>
